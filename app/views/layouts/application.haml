!!! 5
%html(lang='pt-BR')
  %head
    %meta(charset='utf-8')
    %meta(http-equiv='X-UA-Compatible' content='IE=Edge,chrome=1')
    %meta(name='viewport'    content='width=device-width, initial-scale=1.0')
    %meta(name='description' content='Pousada Santanna - Acomodações em Roseira-SP.')
    %meta(name='keywords'    content='pousada, hotel, santanna, roseira, aparecida, guaratinguetá, pindamonhangaba, vale do paraíba')
    %meta(name='title'       content='Pousada Santanna')
    %meta(name='url'         content='http://www.pousadasantanna.com')
    %meta(name='robots'      content='all')

    %title= content_for?(:title) ? yield(:title) : 'Pousada Santanna'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js'
    = stylesheet_link_tag 'application', media: 'all'
    = favicon_link_tag 'favicon.ico', rel: 'shortcut icon'

  %body
    %section.hero
      .container
        %nav.navbar
          .navbar-inner
            .container
              %a.brand{href: '/'} Pousada Santanna
              %ul.nav
                %li.active
                  %a.scroll{href: '#about_us'} Sobre nós
                %li.active
                  %a.scroll{href: '#gallery'} Galeria
                %li.active
                  %a.scroll{href: '#accommodation'} Acomodações
                %li.active
                  %a.scroll{href: '#contact'} Fale Conosco
                %li.active
                  %a.scroll{href: '#localization'} Localização
        %article.marketing.row
          .offset2.span8
            %h1.headline Segurança, tranquilidade e ambiente familiar.
            %h4 Seja bem-vindo à melhor pousada da região.

    - if flash.any?
      .container
        %br
        = bootstrap_flash

    = yield

    %footer
      .container
        %p.brand
          &copy; #{Date.today.year} Pousada Satanna

    = javascript_include_tag 'application'

    / Google Analytics
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-2643450-5']);
      _gaq.push(['_setDomainName', 'pousadasantanna.com']);
      _gaq.push(['_trackPageview']);

      (function(){
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
