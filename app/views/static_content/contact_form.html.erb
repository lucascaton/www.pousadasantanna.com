<div id="center_form">
  <p><strong>Formul√°rio de contato:</strong></p>
  <%- form_for :contact_form, :url => contact_path, :method => :post do |f| %>
    <table>
      <tr>
        <td><span>Nome</span></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><span>Empresa</span></td>
        <td><%= f.text_field :company %></td>
      </tr>
      <tr>
        <td><span>E-mail</span></td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td><span>Telefone</span></td>
        <td><%= f.text_field :phone %></td>
      </tr>
      <tr><td>&nbsp;</td><tr>
        <td><span>Assunto</span></td>
        <td><%= f.text_field :message_subject %></td>
      </tr>
      <tr>
        <td colspan="2"><%= f.text_area :message, :value => 'Digite aqui sua mensagem...' %></td>
      </tr>
    </table><br />
    <div id="center_button"><%= f.submit 'Enviar' %></div>
  <%- end %>
</div>
